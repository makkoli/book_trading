include mixins/head.pug
include mixins/navbar.pug

html
    +head
    body
        +navbar(logged, user)
        div(class="container")
            h1(class="bg-success page-header" style="padding: 10px") Add Book
            h3(class="text-center" style="color: red") #{error}
            h6(class="text-center")
                span(style="color: red") * = required
            form(class="form-horizontal" method="post"
                action="/" + user + "/profile/add"
                enctype="multipart/form-data")
                div(class="form-group")
                    label(for="coverFile" class="col-sm-2 control-label") Cover File
                    div(class="col-sm-10")
                        input(type="file" name="cover")
                div(class="form-group")
                    label(for="title" class="col-sm-2 control-label") Title*
                    div(class="col-sm-10")
                        input(type="text" class="form-control" name="title")
                div(class="form-group")
                    label(for="author" class="col-sm-2 control-label") Author*
                    div(class="col-sm-10")
                        input(type="text" class="form-control" name="author")
                div(class="form-group")
                    div(class="col-sm-offset-10 col-sm-2")
                        button(type="submit"
                        class="btn btn-success btn-lg pull-right") Add Book
