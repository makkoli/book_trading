include mixins/head.pug
include mixins/navbar.pug

html
    +head
    body
        +navbar(logged, user)
        div(class="container")
            h1(class="bg-primary page-header" style="padding: 10px") Profile
            h2(class="text-center") #{user}
            dl(class="dl-horizontal")
                dt Name:
                dd #{firstName} #{lastName}
                dt City:
                dd #{city}
                dt State:
                dd #{state}
            a(class="btn btn-default" href="/" + user + "/profile/update"
                role="button" style="float: right") Update Settings
            p test
