include mixins/head.pug
include mixins/navbar.pug

html
    +head
    body
        +navbar(logged, user)
        div(class="container")
            h1(class="bg-primary page-header" style="padding: 10px") Edit Profile
            h2(class="text-center") #{user}
            form(class="form-horizontal" method="post" action="/" + user + "/profile/edit")
                div(class="form-group")
                    label(for="firstName" class="col-sm-2 control-label") First Name
                    div(class="col-sm-10")
                        input(type="text" class="form-control" name="firstName")
                div(class="form-group")
                    label(for="firstName" class="col-sm-2 control-label") Last Name
                    div(class="col-sm-10")
                        input(type="text" class="form-control" name="lastName")
                div(class="form-group")
                    label(for="firstName" class="col-sm-2 control-label") City
                    div(class="col-sm-10")
                        input(type="text" class="form-control" name="city")
                div(class="form-group")
                    label(for="firstName" class="col-sm-2 control-label") State
                    div(class="col-sm-10")
                        input(type="text" class="form-control" name="state")
                div(class="form-group")
                    div(class="col-sm-offset-10 col-sm-2")
                        button(type="submit" class="btn btn-primary btn-lg pull-right") Update Settings
