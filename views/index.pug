include mixins/head.pug
include mixins/navbar.pug

html
    +head
    body
        +navbar(logged, user)
        div(class="container-fluid")
            div(class="book-img")
                img(src="/images/book_covers/1489544404726_1984_george-orwell.jpg")
            each book in books
                div(class="book-img")
                    a(href="/book/" + book.bookId)
                        img(src=book.coverPath)
